<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.udoo.udoodroidcondemo.MainActivity"
    tools:ignore="MergeRootFrame"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/face_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/yoda_shape"
        android:contentDescription="@string/description_image" />
    
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <ImageView
        android:id="@+id/expression_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/yoda_noespressione"
        android:contentDescription="@string/description_image" />

    <ImageButton
        android:id="@+id/voice_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

   <TextView
       android:id="@+id/twitter_textView"
       android:layout_width="wrap_content"
       android:layout_height="150dp"
       android:layout_centerHorizontal="true"
       android:background="@drawable/balloon"
       android:gravity="center"
       android:textColor="@android:color/black"
       android:textSize="20sp"
       android:visibility="gone" />

</RelativeLayout>
